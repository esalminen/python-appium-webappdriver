<Window x:Class="RPA_TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPA_TestApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnHelloText" Content="Hello" HorizontalAlignment="Left" Margin="77,62,0,0" VerticalAlignment="Top" Click="btnHelloText_Click"/>
        <Button x:Name="btnHowText" Content="How are you" HorizontalAlignment="Left" Margin="77,307,0,0" VerticalAlignment="Top" Click="btnHowText_Click"/>
        <Button x:Name="btnSeeText" Content="See you later" HorizontalAlignment="Left" Margin="640,307,0,0" VerticalAlignment="Top" Click="btnSeeText_Click"/>
        <Button x:Name="btnGoodbyeText" Content="Goodbye" HorizontalAlignment="Left" Margin="640,62,0,0" VerticalAlignment="Top" Click="btnGoodbyeText_Click"/>
        <TextBlock x:Name="tbBtnText" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center"/>

    </Grid>
</Window>
